---
const sections = ["About", "Experience", "Project"];
---

<nav class="hidden nav lg:block" aria-label="navigation jump links">
  <ul class="mt-16 w-max">
    {
      sections.map((section) => (
        <li>
          <a
            class="flex items-center py-3 group active"
            href={"#" + section.toLowerCase()}
          >
            <span
              class={[
                "nav-indicator mr-4 h-[2px] dark:h-px w-8 transition-all",
                "group-focus-visible:w-16 group-hover:w-16",
                "bg-orange-600 group-hover:bg-orange-800 group-focus-visible:bg-orange-800",
                "dark:bg-slate-600 dark:group-hover:bg-slate-200 dark:group-focus-visible:bg-slate-200",
                "motion-reduce:transition-none",
              ].join(" ")}
            />
            <span
              class={[
                "nav-text text-xs font-bold tracking-widest uppercase",
                "text-orange-600 group-hover:text-orange-800 group-focus-visible:text-orange-800",
                "dark:text-slate-500 dark:group-hover:text-slate-200 dark:group-focus-visible:text-slate-200",
              ].join(" ")}
            >
              {section}
            </span>
          </a>
        </li>
      ))
    }
  </ul>
</nav>
