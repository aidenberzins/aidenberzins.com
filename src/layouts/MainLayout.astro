---
import Layout from "./BaseLayout.astro";
---

<Layout>
  <slot name="header" slot="header" />
  <section class="lg:flex lg:justify-between lg:gap-4 pt-8 lg:py-16">
    <aside
      class="lg:sticky lg:top-16 lg:flex h-min lg:h-screen lg:w-1/2 lg:flex-col justify-between"
    >
      <slot name="aside" />
    </aside>
    <main id="content" class="lg:w-1/2">
      <slot />
    </main>
  </section>
</Layout>
